page{
    height: 100%;
    background: rgba(0, 0, 0, .055);
}
.wolf{
    width: 100%;
    height: 153px;
    background: #e60031;
}
image{
    width: 100%;
    height: 812px;
    zoom: 1;
}
.headerImg{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
    top: 76rpx;
    left: 40rpx;
    z-index: 1;
}
.headerName{
    position: absolute;
    top: 100rpx;
    left: 155rpx;
    z-index: 1;
    color: white;
}
.headerLoginBtn{
    position: absolute;
    top: 100rpx;
    right: 40rpx;
    z-index: 1;
    width: 200rpx !important;
    font-size: 26rpx;
}
.wolf-coupon{
    width: 90%;
    border-radius: 10px;
    background-color: #fff;
    height: 60px;
    margin: 0 auto;
    transform: translateY(-35px);
    padding-top: 10px;
    overflow: hidden;
}
.wolf-coupon .coupon{
    width: 33.33%;
    margin: 0 auto;
    text-align: center;
    float: left;
}
.wolf-container {
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color : white;
    padding: 30px 0;
    box-sizing: border-box;
}
.wolf-container .coupon{
    width: 25%;
    float: left;
    text-align: center;
    margin: 10px 0;
}
.wolf-container image{
    width: 25px;
    height: 25px;
}